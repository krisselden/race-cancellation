    "c8": "^7.2.0",
    "coveralls": "^3.0.6",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "mocha": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "typescript": "~3.7.2"
  },
  "mocha": {
    "spec": "tests/*Test.js"
  },
  "volta": {
    "node": "14.4.0",
    "yarn": "1.22.4"
