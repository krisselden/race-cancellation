{
  "private": true,
  "workspaces": [
    "tests",
    "race-cancellation",
    "examples"
  ],
  "scripts": {
    "docs": "yarn workspace race-cancellation docs",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint .",
    "lint:examples": "tsc -p examples --noEmit",
